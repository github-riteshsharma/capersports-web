# Azure Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=production
PORT=80
WEBSITE_PORT=80

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/capersports?retryWrites=true&w=majority

# JWT
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRE=30d

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password

# Frontend URL (Update with your Azure Static Web App URL)
FRONTEND_URL=https://your-frontend-app.azurestaticapps.net

# Azure App Service specific
WEBSITES_ENABLE_APP_SERVICE_STORAGE=false
WEBSITE_NODE_DEFAULT_VERSION=18.17.0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
