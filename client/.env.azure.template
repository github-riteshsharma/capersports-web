# Azure Production Environment Variables Template for React
# Add these to Azure Static Web App Configuration or App Service Configuration

# ===== API CONFIGURATION =====
# Update with your actual Azure App Service backend URL
REACT_APP_API_URL=https://capersports-api.azurewebsites.net/api

# ===== APP CONFIGURATION =====
REACT_APP_NAME=CaperSports
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Premium Sports Clothing E-commerce Platform
REACT_APP_ENV=production

# ===== STRIPE CONFIGURATION =====
REACT_APP_STRIPE_PUBLISHABLE_KEY=<your-stripe-publishable-key>

# ===== BUILD CONFIGURATION =====
GENERATE_SOURCEMAP=false
DISABLE_ESLINT_PLUGIN=true
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=0

