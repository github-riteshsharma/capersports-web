# Azure Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# API Configuration (Update with your Azure App Service URL)
REACT_APP_API_URL=https://your-backend-app.azurewebsites.net/api

# App Configuration
REACT_APP_NAME=CaperSports
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Premium Sports Clothing E-commerce Platform
REACT_APP_ENV=production

# Stripe Configuration (Public Key)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Build Configuration
GENERATE_SOURCEMAP=false
DISABLE_ESLINT_PLUGIN=true

# Performance Optimization
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=0
